#!/usr/bin/env bash
set -euo pipefail

# Development helper script to run the kira CLI from source
# without building or installing the binary.

# Determine the repository root (directory of this script), but
# keep the caller's current working directory so kira operates
# on the intended workspace (current directory's `.work/`, config, etc.).
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]:-${0}}")" && pwd)"

go run "$SCRIPT_DIR/cmd/kira/main.go" "$@"

